pipeline {
    agent any

    environment {
        registry = "150741279371.dkr.ecr.eu-central-1.amazonaws.com/projectjenkins"
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/raoulcarnot/jenkinsproject.git']]])
            }
        }
    
        stage ("Build image") {
            steps {
                script {
                    docker.build registry
                }
            }
        }
        
        stage ("docker push") {
         steps {
             script {
                sh "aws ecr get-login-password --region eu-central-1 | docker login --username AWS --password-stdin 150741279371.dkr.ecr.eu-central-1.amazonaws.com"
                sh "docker push 150741279371.dkr.ecr.eu-central-1.amazonaws.com/projectjenkins"
                 
             }
           }   
        }
        
        stage ("Kube Deploy") {
            steps {
                withKubeConfig(caCertificate: '', clusterName: '', contextName: '', credentialsId: 'K8S', namespace: '', serverUrl: '') {
                 sh "kubectl apply -f eks-deploy-from-ecr.yaml"
                }
            }
        }
    }
}
